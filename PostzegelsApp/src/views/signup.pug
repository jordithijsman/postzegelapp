.container
    .row
        br
    .row
        main.col.col-md-6
            .container#content
                form(method='POST')#gegevensform
                    .mb-3
                        label.form-label(for='voornaam') Gegevens:
                        input.form-control#voornaam(type='name', placeholder='Voornaam*', name='voornaam', required)
                        input.form-control#naam(type='name', placeholder='Naam*', name='naam', required)
                    .mb-3.mt-3
                        input.form-control#email(type='email', placeholder='Email*', name='email', required)
                        input.form-control#tel(type='phone', placeholder='telefoonnummer', name='telefoonnr')
                    .mb-3.mt-3
                        input.form-control#gemeente(type='string', placeholder='gemeente', name='gemeente')
                        input.form-control#postcode(type='number', placeholder='postcode', name='postcode')
                        input.form-control#straat(type='string', placeholder='straat', name='straat')
                        input.form-control#huisnr(type='number', placeholder='huisnummer', name='huisnr')
                        button(type='submit').btn.btn-primary Sign up
